---
interface Club {
  id: string;
  name: string;
  shortName: string;
  logo: string;
}

interface Props {
  allMatches: any[];
  clubs: Map<string, Club>;
  accentColor?: 'gold' | 'burgundy';
}

const { allMatches, clubs, accentColor = 'gold' } = Astro.props;

// Compute per-club stats
interface ClubStats {
  id: string;
  reigns: number;
  defenses: number;
  conquests: number;
  losses: number;
  matchesAsHolder: number;
}

const statsMap = new Map<string, ClubStats>();

function ensure(id: string): ClubStats {
  if (!statsMap.has(id)) {
    statsMap.set(id, { id, reigns: 0, defenses: 0, conquests: 0, losses: 0, matchesAsHolder: 0 });
  }
  return statsMap.get(id)!;
}

for (const m of allMatches) {
  if (m.type === 'seeding' && m.holderId) {
    const s = ensure(m.holderId);
    s.reigns++;
  }
  if (m.type === 'match') {
    if (m.holderId) {
      const holder = ensure(m.holderId);
      holder.matchesAsHolder++;
      if (m.newHolderId === m.holderId) {
        holder.defenses++;
      } else if (m.newHolderId && m.newHolderId !== m.holderId) {
        holder.losses++;
        const winner = ensure(m.newHolderId);
        winner.conquests++;
        winner.reigns++;
      }
    }
  }
}

const ranked = [...statsMap.values()]
  .sort((a, b) => {
    if (b.reigns !== a.reigns) return b.reigns - a.reigns;
    if (b.defenses !== a.defenses) return b.defenses - a.defenses;
    return b.conquests - a.conquests;
  });

function getClub(id: string) {
  return clubs.get(id);
}
---

<section class:list={['palmares', `palmares-${accentColor}`]}>
  <div class="palmares-header">
    <h2 class="palmares-title">Palmares</h2>
    <span class="palmares-subtitle">{ranked.length} equipos participantes</span>
  </div>

  <!-- Mobile: cards layout, Desktop: table -->
  <div class="palmares-table-wrap">
    <table class="palmares-table">
      <thead>
        <tr>
          <th class="th-pos">#</th>
          <th class="th-club">Equipo</th>
          <th class="th-num" title="Reinados">Reinados</th>
          <th class="th-num" title="Conquistas">Conquistas</th>
          <th class="th-num" title="Defensas exitosas">Defensas</th>
          <th class="th-num" title="Perdidas del titulo">Perdidas</th>
          <th class="th-num" title="Partidos como poseedor">PJ</th>
        </tr>
      </thead>
      <tbody>
        {ranked.map((stat, i) => {
          const club = getClub(stat.id);
          return (
            <tr class:list={{ 'row-top': i === 0 }}>
              <td class="td-pos">{i + 1}</td>
              <td class="td-club">
                {club?.logo && (
                  <img src={club.logo} alt="" width="24" height="24" class="club-logo" />
                )}
                <span class="club-name">{club?.shortName || club?.name || stat.id}</span>
                <span class="club-fullname">{club?.name || stat.id}</span>
              </td>
              <td class="td-num td-reigns">{stat.reigns}</td>
              <td class="td-num">{stat.conquests}</td>
              <td class="td-num">{stat.defenses}</td>
              <td class="td-num">{stat.losses}</td>
              <td class="td-num">{stat.matchesAsHolder}</td>
            </tr>
          );
        })}
      </tbody>
    </table>
  </div>
</section>

